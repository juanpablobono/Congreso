<div class="depot_form">
	<% if flash[:alert] %>
		<p id="alert"><%= flash[:alert] %></p>
	<% end %>
	<%= form_tag do %>
		<fieldset>
			<legend>Iniciar sesión</legend>
			<div>
				<%= label_tag :usuario, 'Usuario:' %><br/>
				<%= text_field_tag :usuario, params[:usuario] %>
			</div>
			<div>
				<%= label_tag :password, 'Contraseña:' %><br/>
				<%= password_field_tag :password, params[:password] %>
			</div>
			<br>
			<div/>
				<%= submit_tag "Ingresar" %>
			</div>
		</fieldset>
	<% end %>
</div>